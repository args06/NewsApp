<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_headline_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginHorizontal="@dimen/dimen_8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_top_headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dimen_12dp">

        <ImageView
            android:id="@+id/iv_headline_image"
            android:layout_height="160dp"
            android:layout_width="match_parent"
            tools:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_headline_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            tools:text="@string/title_dummy"
            style="@style/TitleTextStyle"
            android:ellipsize="end"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_headline_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            tools:text="@string/source_dummy"
            style="@style/SourceTextStyle" />


        <TextView
            android:id="@+id/tv_headline_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            tools:text="2 Feb 2023"
            style="@style/DateTextStyle"
            android:layout_marginBottom="@dimen/dimen_8dp"/>
    </LinearLayout>
</LinearLayout>